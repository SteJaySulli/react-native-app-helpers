{
  "name": "react-native-app-helpers",
  "description": "General tools we use to build React Native applications.",
  "version": "0.0.0",
  "engines": {
    "node": ">=16.11.1"
  },
  "engineStrict": true,
  "repository": {
    "type": "git",
    "url": "https://github.com/jameswilddev/react-native-app-helpers"
  },
  "publishConfig": {
    "access": "public"
  },
  "private": false,
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "27.4.0",
    "@types/react": "17.0.38",
    "@types/react-native": "0.66.11",
    "@types/react-test-renderer": "17.0.1",
    "@types/uuid": "8.3.4",
    "@typescript-eslint/eslint-plugin": "5.9.0",
    "@typescript-eslint/parser": "5.9.0",
    "del-cli": "4.0.1",
    "eslint": "8.6.0",
    "eslint-config-prettier": "8.3.0",
    "eslint-plugin-prettier": "4.0.0",
    "jest": "27.4.7",
    "metro-react-native-babel-preset": "0.66.2",
    "npm-run-all": "4.1.5",
    "prettier": "2.5.1",
    "react": "17.0.2",
    "react-native": "0.66.4",
    "react-test-renderer": "17.0.2",
    "typescript": "4.5.4"
  },
  "peerDependencies": {
    "react": "*",
    "react-native": "*"
  },
  "scripts": {
    "buildClean": "del-cli \"**/*.js\" \"**/*.d.ts\" \"!**/node_modules/**/*\"",
    "buildLint": "eslint \"**/*.ts\" \"**/*.tsx\"",
    "buildLintFix": "eslint --fix \"**/*.ts\" \"**/*.tsx\"",
    "buildTypeScript": "tsc",
    "buildJest": "jest",
    "test": "npm-run-all buildClean buildLintFix buildTypeScript buildJest"
  },
  "files": [
    "**/index.js",
    "**/index.d.ts"
  ],
  "types": "index.d.ts",
  "sideEffects": false,
  "dependencies": {
    "events": "3.3.0",
    "expo": "44.0.4",
    "expo-file-system": "13.1.0",
    "expo-secure-store": "11.1.0",
    "filter-validate-email": "1.1.3",
    "react-native-safe-area-context": "3.3.2",
    "uuid": "8.3.2"
  }
}
